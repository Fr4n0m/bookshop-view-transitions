---
export interface Props {
	id: string
	title: string
	description: string
	author: string
	authorLink: string
	image: string
	price: number
}

const { id, title, image, description, author, authorLink, price } = Astro.props
---

<a class='inline-block book' href={`/${id}`}>
	<img
		class='aspect-[552/839] h-full object-cover w-full max-w-full rounded hover:scale-105 inline-block transition-all hover:contrast-125 hover:shadow-2xl'
		src={image}
		alt={title}
		style={`view-transition-name: book-${id}`}
	/>
	<div class='bottom-0 left-0 p-2 text-black'>
		<h2 class='text-lg font-bold hover:text-black/70'>{title}</h2>
		<p class='text-sm mt-3 italic'>{description}</p>
		<p class='text-sm text-black'>
			By
			<a class='text-black font-bold hover:underline' href={authorLink}>{author}</a>
		</p>
		<p
			class='text-3xl text-red-700 font-bold font-serif drop-shadow-md shadow-red-950 flex justify-end'
		>
			{price}â‚¬
		</p>
	</div>
</a>
